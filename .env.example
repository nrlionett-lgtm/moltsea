# ===========================================
# NETLIFY ENVIRONMENT VARIABLES
# Copy these to Netlify Dashboard > Site Settings > Environment Variables
# ===========================================

# Database (Supabase PostgreSQL - REQUIRED)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# Next.js Public Variables (REQUIRED)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_FACTORY_ADDRESS=0x...
NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x...

# RPC URLs
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_RPC_URL=https://mainnet.base.org

# IPFS - Pinata (for NFT metadata)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# API Authentication Secret
JWT_SECRET=your_jwt_secret_for_agent_auth

# Private key for contract deployment (OPTIONAL - only for local dev)
PRIVATE_KEY=your_private_key_here

# Basescan API key for contract verification (OPTIONAL)
BASESCAN_API_KEY=your_basescan_api_key_here
